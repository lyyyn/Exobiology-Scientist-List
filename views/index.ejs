<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
    <title>Exobiology</title>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col s6">
                <h4>Exobiology Scientist List</h4>
            </div>
        </div>
        <div class="row">
            <div class="col s3">
                <a class="btn" href="/new">Register</a>
            </div>
        </div>
        <div class="row">
            <div class="col s3">Name</div>
            <div class="col s4">Job Description</div>
            <div class="col s2">Action</div>
        </div>
        <hr>
        <%scientists.forEach((scientist,idx) => {%>
        <div class="row">
            <div class="col s3"><a href="/<%=idx%>"><%=scientist.name%></a></div>
            <div class="col s4"><%=scientist.desc%></div>
            <div class="col s2">
                <a class="btn" href="/edit/<%=idx%>">Edit</a></div>
            <div class="col s2">
                <form action="/del/<%= idx %>?_method=DELETE" method="POST">
                    <input type="submit" class="btn" value="Delete" />
                </form>
            </div>
        </div>
        <hr>
        <%})%>
    </div>
</body>

</html>